<section class="container">
  
  <div class="row">
    <div class="col-3"></div>
    <div class="col-6">
      <header class="page-header">
        <h1 class="display-5">Contact Us</h1>
      </header>
    <%= form_for @contact do |form| %>
      <div class="form-group m-3">
        <%= form.label :name %>
        <%= form.text_field :name, required: true, class: 'form-control' %>
      </div>
      <div class="form-group m-3">
        <%= form.label :email %>
        <%= form.text_field :email, required: true, class: 'form-control' %>
      </div>
      <div class="form-group m-3">
        <%= form.label :message %>
        <%= form.text_area :message, required: true, class: 'form-control', placeholder: "Send me a message" %>
      </div>
      <%= form.submit 'Send Message', class: 'btn contact-btn m-3' %>
    <% end %>
    <% if flash[:alert] %>
      <div class="alert alert-danger" role="alert">
        <%= flash[:alert] %>
      </div>
    <% elsif flash[:notice] %>
      <div class="alert alert-light" role="alert">
        <%= flash[:notice] %>
      </div>
    <% end %>

    </div>
    <div class="col-3"></div>
  </div>
</section>
