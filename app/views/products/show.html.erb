<section class="container pb-5">
  <header>
    <h1 class="display-5">
      <%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %>
    </h1>
  </header>
  <div class="row">
    <div class="col">
      <%= image_tag @product.image.url, class: 'main-img w-100' %>
    </div>
    <div class="col product-detail">
      <h1 class="display-5"><%= @product.name %></h1>
      <p><%= @product.description %></p>
      <div class="quantity">
        <span><%= @product.quantity %> in stock at </span>
        <span>$<%= @product.price_cents %></span>
      </div>
      <div class="price">
        <% if @product.quantity == 0 %>
          <button type="button" class="btn soldout" disabled>Sold Out</button>
        <% else %>
          <%= button_to add_item_cart_path(product_id: @product.id), class: 'btn mt-2' , method: :post do %>
            <%= fa_icon "shopping-cart", text: 'Add' %>
          <% end %> 
        <% end %>                
      </div>
    </div>
  </div>
</section>
