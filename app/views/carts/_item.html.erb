<div class="container mb-3 item">
  <div class="row mb-3 ">
    <div class="col-3 item-image">
      <%= image_tag product.image.url, class: "w-100" %>
    </div>
    <div class="col-6 item-details d-flex flex-column justify-content-between">
      <h5 class="m-0 mb-2 fw-light"><%= product.name %></h5>
      <div class="d-flex w-50 justify-content-between align-items-center">
        <%= button_to remove_item_cart_path(product_id: product.id), class: 'btn btn-xs btn-light' do %> - <% end %>
          <%= quantity %>
        <%= button_to add_item_cart_path(product_id: product.id), class: 'btn btn-xs btn-light' do %> + <% end %>
      </div>
    </div>
    <div class="col-3 item-price d-flex flex-row-reverse">
      $<%= product.price_cents * quantity %>
    </div>
  </div>
</div>